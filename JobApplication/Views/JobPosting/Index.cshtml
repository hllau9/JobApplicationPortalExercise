@model IEnumerable<JobApplication.Web.Models.JobPostingVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Job Listings</h1>

<table class="table">
    <thead>
        <tr>
            <th>

            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Employer)
            </th>
            <th>
                Relevant Skills
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @{ var rowCount = 1; }
    @foreach (var item in Model) {
        <tr>
            <td>
                @rowCount
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employer)
            </td>
            <td>
                @{
                    var skills = "";
                    var count = 1;

                    foreach (var skill in item.SkillList)
                    {
                        skills += skill;
                        if (count < item.SkillList.Count)
                        {
                            skills += ", ";
                        }
                        count++;
                    }
                }
                @skills
            </td>
            <td>
                <a asp-action="Application" asp-controller="JobApplication" asp-route-id="@item.Id" class="btn btn-secondary">Apply</a>
            </td>
        </tr>
        rowCount++;
    }
    </tbody>
</table>
