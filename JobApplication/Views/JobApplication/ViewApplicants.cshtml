@model IEnumerable<JobApplication.Models.JobApplicationFormVM>

@{
    ViewData["Title"] = "ViewApplicants";
}

<h1>View Applicants</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.YearsOfExperience)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PreferredLocation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HeardFromWhere)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NoticePeriod)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ResumeFilePath)
            </th>
            <th>Skills</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JobTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.YearsOfExperience)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PreferredLocation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HeardFromWhere)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoticePeriod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                <a href="@item.ResumeFilePath" target="_blank">View resume</a>
            </td>
            <td>
                @{ 
                    var skills = "";
                    var count = 1;

                    foreach (var skill in item.SkillList)
                    {
                        skills += skill;
                        if (count < item.SkillList.Count)
                        {
                            skills += ", ";
                        }
                        count++;
                    }
                }
                @skills
            </td>
        </tr>
}
    </tbody>
</table>
